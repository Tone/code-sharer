{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "run-p build:ts doc:html",
    "build:ts": "run-s test tsc",
    "tsc": "tsc -b",
    "lint": "eslint \"packages/*/src/**/*.{js,ts}\" \"packages/*/__test__/**/*.{js,ts}\" \"scripts/**/*.{js,ts}\" --quiet --fix",
    "doc": "run-s doc:html && opn build/docs/index.html",
    "doc:html": "typedoc src/ --target ES6 --mode file --out docs",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "pretest": "run-s lint",
    "test": "jest --forceExit --coverage --verbose",
    "update:deps": "yarn upgrade-interactive --latest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "node scripts/verify_commit.js",
      "pre-push": "jest --onlyChanged"
    }
  },
  "lint-staged": {
    "*.{less,md,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts,jsx,tsx}": [
      "eslint --quiet --fix",
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@typescript-eslint/eslint-plugin": "2",
    "@typescript-eslint/parser": "^2.30.0",
    "chalk": "^4.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard-with-typescript": "^16.0.0",
    "eslint-plugin-import": "2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "11",
    "eslint-plugin-promise": "4",
    "eslint-plugin-standard": "4",
    "husky": "^4.2.5",
    "jest": "25.5.0",
    "lint-staged": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "open": "^7.0.3",
    "prettier": "^2.0.5",
    "ts-jest": "^25.4.0",
    "ts-node": "^8.9.1",
    "typedoc": "^0.17.6",
    "typescript": "^3.8.3"
  }
}
